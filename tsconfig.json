{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "outDir": "out",
    "noImplicitAny": false,
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ]
}